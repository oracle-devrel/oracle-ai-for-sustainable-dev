# Step 1: Build React App
FROM node:20 as build

WORKDIR /app
COPY package*.json ./
RUN npm install
RUN #npm install && npm run build && rm -rf node_modules

# Set build arguments
ARG REACT_APP_BACKEND_URL
ARG REACT_APP_MICROTX_TRANSFER_SERVICE_URL
ARG REACT_APP_MICROTX_ACCOUNT_SERVICE_URL
ARG REACT_APP_MERN_BACKEND_SERVICE_URL
ARG REACT_APP_JAVA_ACCOUNTDETAIL_SERVICE_URL
ARG REACT_APP_GRAPH_LAUNDERING_SERVICE_URL
ARG REACT_APP_TRUECACHE_STOCK_SERVICE_URL
ARG REACT_APP_SHARDING_SPATIAL_CC_SERVICE_URL
ARG REACT_APP_STOCK_SERVICE_URL
ARG REACT_APP_KAFKA_TXEVENTQ_SERVICE_URL
ARG REACT_APP_AIAGENT_VECTOR_ADVISOR_SERVICE_URL
ARG REACT_APP_SPEECH_SELECTAI_QUERY_SERVICE_URL

# Set environment variables for React
ENV REACT_APP_BACKEND_URL=$REACT_APP_BACKEND_URL
ENV REACT_APP_MICROTX_TRANSFER_SERVICE_URL=$REACT_APP_MICROTX_TRANSFER_SERVICE_URL
ENV REACT_APP_MICROTX_ACCOUNT_SERVICE_URL=$REACT_APP_MICROTX_ACCOUNT_SERVICE_URL
ENV REACT_APP_MERN_BACKEND_SERVICE_URL=$REACT_APP_MERN_BACKEND_SERVICE_URL
ENV REACT_APP_JAVA_ACCOUNTDETAIL_SERVICE_URL=$REACT_APP_JAVA_ACCOUNTDETAIL_SERVICE_URL
ENV REACT_APP_GRAPH_LAUNDERING_SERVICE_URL=$REACT_APP_GRAPH_LAUNDERING_SERVICE_URL
ENV REACT_APP_TRUECACHE_STOCK_SERVICE_URL=$REACT_APP_TRUECACHE_STOCK_SERVICE_URL
ENV REACT_APP_SHARDING_SPATIAL_CC_SERVICE_URL=$REACT_APP_SHARDING_SPATIAL_CC_SERVICE_URL
ENV REACT_APP_STOCK_SERVICE_URL=$REACT_APP_STOCK_SERVICE_URL
ENV REACT_APP_KAFKA_TXEVENTQ_SERVICE_URL=$REACT_APP_KAFKA_TXEVENTQ_SERVICE_URL
ENV REACT_APP_AIAGENT_VECTOR_ADVISOR_SERVICE_URL=$REACT_APP_AIAGENT_VECTOR_ADVISOR_SERVICE_URL
ENV REACT_APP_SPEECH_SELECTAI_QUERY_SERVICE_URL=$REACT_APP_SPEECH_SELECTAI_QUERY_SERVICE_URL


COPY . .
RUN npm run build

# Step 2: Serve using nginx
FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
